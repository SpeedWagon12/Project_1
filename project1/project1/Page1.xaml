<Page x:Class="project1.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0"    >
            <Button Name="RegRunnerpage" Content="Я хочу стать бегуном" Click="Runner_Click" Height="58"  Margin="130,25,130,10"/>
            <Button Name="RegSponsorPage" Content="Я хочу стать спонсором бегуна" Click="Sponsor_Click" Height="53"  Margin="130,10" />
            <Button Name="InfoPage" Content="Я хочу узнать больше о событии"  Click="Informatoin_Click" Height="58" Margin="130,10"/>

        </StackPanel>
        <StackPanel Grid.Row="1"  >
            <Button Name="Login" Content="Login" HorizontalAlignment="Right"   Margin="0,0,10,0" Click="Login_Click" Width="101" Height="48"
                   />
        </StackPanel>
    </Grid>

</Page>
